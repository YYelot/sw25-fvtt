<form class="{{cssClass}}" autocomplete="off">
  <header class="sheet-header">
    <img class="profile-img" src="{{item.img}}" data-edit="img" title="{{item.name}}"/>
    <div class="header-fields">
      <h1 class="charname"><input name="name" type="text" value="{{item.name}}" placeholder="Name"/></h1>
      <div class="grid grid-6col flex-group-left nogapmargin">
        <div class="grid-span-2">
          <b>{{system.typename}} </b>{{#if system.prep}}△{{/if}}{{#if system.vag}}浪{{/if}}{{#if system.dancer}}舞{{/if}}
        </div>
        <div class="grid-span-2">
          {{#if system.secret}}<b>{{system.school}} : {{system.sectype}}</b>{{/if}}
        </div>
        <div class="grid-span-6">
          <b>{{system.condtypename}} : </b>{{system.cond}}
        </div>
        <div class="grid-span-6">
          <b>{{localize "SW25.Item.Combatability.Use"}} : </b>{{system.use}}
        </div>
        <div class="grid-span-3">
          <b>{{localize "SW25.Item.Combatability.App"}} : </b>{{system.app}}
        </div>
        <div class="grid-span-3">
          <b>{{localize "SW25.Item.Combatability.Risk"}} : </b>{{system.risk}}
        </div>
        {{#if system.secret}}
        <div class="grid-span-4">
          <b>{{localize "SW25.Item.Combatability.Limcond"}} : </b>{{system.limcond}}
        </div>
        <div class="grid-span-2" style="text-align: right;">
          <b>{{localize "SW25.Item.Combatability.Honercost"}} : </b>{{system.honercost}}
        </div>
        {{/if}}
        <div class="grid-span-6">
          <b>{{localize "SW25.Item.Overview"}} : </b>{{system.overview}}
        </div>
      </div>
    </div>
  </header>

  {{!-- Sheet Tab Navigation --}}
  <nav class="sheet-tabs tabs" data-group="primary">
    <a class="item" data-tab="description">{{localize "SW25.Description"}}</a>
    <a class="item" data-tab="details">{{localize "SW25.Details"}}</a>
    <a class="item" data-tab="effects">{{localize "SW25.Effects"}}</a>
  </nav>

  {{!-- Sheet Body --}}
  <section class="sheet-body">

    {{!-- Description Tab --}}
    <div class="tab" data-group="primary" data-tab="description">
      {{editor system.description target="system.description" rollData=rollData button=true owner=owner editable=editable}}
    </div>

    {{!-- Detail Tab --}}
    <div class="tab details" data-group="primary" data-tab="details">
      <div class="flexcol">
        <div class="flexrow grid grid-10col nogapmargin">
          <span class="grid-span-3" style="text-align: center;"><b>{{localize "SW25.Item.Clickitem"}}</b><br>
            <select name="system.clickitem">
              {{#select system.clickitem}}
              <option value="all">{{localize "SW25.Item.All"}}</option>
              <option value="power">{{localize "SW25.Item.Powerroll"}}</option>
              <option value="dice">{{localize "SW25.Item.Diceroll"}}</option>
              <option value="description">{{localize "SW25.Item.Onlydescription"}}</option>
              {{/select}}
            </select>
          </span>
          <div class="grid-span-3"></div>
          <span class="grid-span-2"  style="text-align: center;"><label for="{{item._id}}system.usedice"><b>{{localize "SW25.Item.Usedice"}}</b></label><br>
            <input id="{{item._id}}system.usedice" type="checkbox" name="system.usedice" data-dtype="Boolean" {{#if system.usedice}} checked {{/if}}/></span>
          <span class="grid-span-2"  style="text-align: center;"><label for="{{item._id}}system.usepower"><b>{{localize "SW25.Item.Usepower"}}</b></label><br>
            <input id="{{item._id}}system.usepower" type="checkbox" name="system.usepower" data-dtype="Boolean" {{#if system.usepower}} checked {{/if}}/></span>
        </div>
        <div class="flexrow grid grid-10col">
          <span class="grid-span-3" style="text-align: left;"><b>{{localize "SW25.Item.Combatability.Type"}}</b><br>
            <select name="system.type">
              {{#select system.type}}
              <option value="-">-</option>
              <option value="allways">{{localize "SW25.Item.Combatability.Allways"}}</option>
              <option value="declaration">{{localize "SW25.Item.Combatability.Declaration"}}</option>
              <option value="mainop">{{localize "SW25.Item.Combatability.Mainop"}}</option>
              {{/select}}
            </select>
          </span>
          <span class="grid-span-2"  style="text-align: center;"><label for="{{item._id}}system.prep"><b>{{localize "SW25.Item.Prep"}}</b></label><br>
            <input id="{{item._id}}system.prep" type="checkbox" name="system.prep" data-dtype="Boolean" {{#if system.prep}} checked {{/if}}/></span>
          <span class="grid-span-2"  style="text-align: center;"><label for="{{item._id}}system.vag"><b>{{localize "SW25.Item.Combatability.Vag"}}</b></label><br>
            <input id="{{item._id}}system.vag" type="checkbox" name="system.vag" data-dtype="Boolean" {{#if system.vag}} checked {{/if}}/></span>
          <span class="grid-span-2"  style="text-align: center;"><label for="{{item._id}}system.dancer"><b>{{localize "SW25.Item.Combatability.Dancer"}}</b></label><br>
            <input id="{{item._id}}system.dancer" type="checkbox" name="system.dancer" data-dtype="Boolean" {{#if system.dancer}} checked {{/if}}/></span>
          <span class="grid-span-1"  style="text-align: center;"><label for="{{item._id}}system.secret"><b>{{localize "SW25.Item.Combatability.Secret"}}</b></label><br>
            <input id="{{item._id}}system.secret" type="checkbox" name="system.secret" data-dtype="Boolean" {{#if system.secret}} checked {{/if}}/></span>
          <span class="grid-span-2" style="text-align: left;"><label for="{{item._id}}system.condtype"><b>{{localize "SW25.Condition"}}</b></label><br>
            <select id="{{item._id}}system.condtype" name="system.condtype">
              {{#select system.condtype}}
              <option value="-">-</option>
              <option value="premise">{{localize "SW25.Item.Combatability.Premise"}}</option>
              <option value="replace">{{localize "SW25.Item.Combatability.Replace"}}</option>
              <option value="learn">{{localize "SW25.Item.Combatability.Learn"}}</option>
              {{/select}}
            </select>
          </span>
          <span class="grid-span-8" style="text-align: left;"><label for="{{item._id}}system.cond"><b>{{localize "SW25.Condition"}}{{localize "SW25.Contents"}}</b></label><br>
            <input id="{{item._id}}system.cond" type="text" name="system.cond" value="{{system.cond}}" data-dtype="String"/></span>
          <span class="grid-span-10" style="text-align: left;"><label for="{{item._id}}system.use"><b>{{localize "SW25.Item.Combatability.Use"}}</b></label><br>
            <input id="{{item._id}}system.use" type="text" name="system.use" value="{{system.use}}" data-dtype="String"/></span>
          <span class="grid-span-5" style="text-align: left;"><label for="{{item._id}}system.app"><b>{{localize "SW25.Item.Combatability.App"}}</b></label><br>
            <input id="{{item._id}}system.app" type="text" name="system.app" value="{{system.app}}" data-dtype="String"/></span>
          <span class="grid-span-5" style="text-align: left;"><label for="{{item._id}}system.risk"><b>{{localize "SW25.Item.Combatability.Risk"}}</b></label><br>
            <input id="{{item._id}}system.risk" type="text" name="system.risk" value="{{system.risk}}" data-dtype="String"/></span>
          <span class="grid-span-10" style="text-align: left;"><label for="{{item._id}}system.overview"><b>{{localize "SW25.Item.Overview"}}</b></label><br>
            <input id="{{item._id}}system.overview" type="text" name="system.overview" value="{{system.overview}}" data-dtype="String"/></span>
          {{#if system.secret}}
          <span class="grid-span-8" style="text-align: left;"><label for="{{item._id}}system.school"><b>{{localize "SW25.Item.Combatability.Scholl"}}</b></label><br>
            <input id="{{item._id}}system.school" type="text" name="system.school" value="{{system.school}}" data-dtype="String"/></span>
          <span class="grid-span-2" style="text-align: center;"><label for="{{item._id}}system.honercost"><b>{{localize "SW25.Item.Combatability.Honercost"}}</b></label><br>
            <input id="{{item._id}}system.honercost" type="text" name="system.honercost" value="{{system.honercost}}" data-dtype="Number"/></span>
          <span class="grid-span-5" style="text-align: left;"><label for="{{item._id}}system.sectype"><b>{{localize "SW25.Item.Combatability.Sectype"}}</b></label><br>
            <input id="{{item._id}}system.sectype" type="text" name="system.sectype" value="{{system.sectype}}" data-dtype="String"/></span>
          <span class="grid-span-5" style="text-align: left;"><label for="{{item._id}}system.limcond"><b>{{localize "SW25.Item.Combatability.Limcond"}}</b></label><br>
            <input id="{{item._id}}system.limcond" type="text" name="system.limcond" value="{{system.limcond}}" data-dtype="String"/></span>
          {{/if}}
        </div>
        <div style="display: {{#if system.usedice}}block{{else}}none{{/if}};">
          <div class="flexrow grid grid-10col">
            <span class="resource-label grid-span-2" style="text-decoration: underline;">{{localize "SW25.Check"}}{{localize "SW25.Setting"}}</span>            <span class="grid-span-2" style="text-align: left;">{{localize "SW25.Check"}}{{localize "SW25.Basenumber"}} : <b>{{system.checkbase}}</b></span>
            <span class="grid-span-2" style="text-align: left;">
              <select name="system.applycheck">
                {{#select system.applycheck}}
                <option value="-">{{localize "SW25.Item.Noapply"}}</option>
                <option value="on">{{localize "SW25.Item.applyon"}}</option>
                <option value="custom">{{localize "SW25.Item.Custom"}}</option>
                {{/select}}
              </select>
            </span>
            <span class="grid-span-4">
              {{#if (eq system.applycheck "custom")}}
              <div class="flexcol">
                <div>
                  <label for="{{item._id}}ckpdbt"><input id="{{item._id}}ckpdbt" type="checkbox" class="small-checkbox" name="system.ckpdbt" data-dtype="Boolean" {{#if system.ckpdbt}} checked {{/if}}/>{{localize "SW25.Item.pd"}}</label>
                  <label for="{{item._id}}ckmdbt"><input id="{{item._id}}ckmdbt" type="checkbox" class="small-checkbox" name="system.ckmdbt" data-dtype="Boolean" {{#if system.ckmdbt}} checked {{/if}}/>{{localize "SW25.Item.md"}}</label>
                  <label for="{{item._id}}ckcdbt"><input id="{{item._id}}ckcdbt" type="checkbox" class="small-checkbox" name="system.ckcdbt" data-dtype="Boolean" {{#if system.ckcdbt}} checked {{/if}}/>{{localize "SW25.Item.cd"}}</label>
                </div>
                <div>
                  <label for="{{item._id}}ckhrbt"><input id="{{item._id}}ckhrbt" type="checkbox" class="small-checkbox" name="system.ckhrbt" data-dtype="Boolean" {{#if system.ckhrbt}} checked {{/if}}/>{{localize "SW25.Item.hr"}}</label>
                  <label for="{{item._id}}ckmrbt"><input id="{{item._id}}ckmrbt" type="checkbox" class="small-checkbox" name="system.ckmrbt" data-dtype="Boolean" {{#if system.ckmrbt}} checked {{/if}}/>{{localize "SW25.Item.mr"}}</label>
                </div>
              </div>
              {{/if}}
            </span>
          </div>
          <div class="flexrow grid grid-8col">
            <span class="grid-span-2" style="text-align: center;"><b>{{localize "SW25.Check"}}{{localize "SW25.Skillname"}}</b><br>
              <select name="system.checkskill">
                {{#select system.checkskill}}
                <option value="-">-</option>
                <option value="adv">{{localize "SW25.Attributes.Advlevel"}}</option>
                {{#each system.skilllist as |skill|}}
                <option value="{{skill}}">{{skill}}</option>
                {{/each}}
                {{/select}}
              </select>
            </span>
            <span class="grid-span-2" style="text-align: center;"><b>{{localize "SW25.Check"}}{{localize "SW25.Abilityname"}}</b><br>
              <select name="system.checkabi">
                {{#select system.checkabi}}
                <option value="-">-</option>
                <option value="dex">{{localize "SW25.Ability.Dex.long"}}</option>
                <option value="agi">{{localize "SW25.Ability.Agi.long"}}</option>
                <option value="str">{{localize "SW25.Ability.Str.long"}}</option>
                <option value="vit">{{localize "SW25.Ability.Vit.long"}}</option>
                <option value="int">{{localize "SW25.Ability.Int.long"}}</option>
                <option value="mnd">{{localize "SW25.Ability.Mnd.long"}}</option>
                {{/select}}
              </select>
            </span>
            <span class="grid-span-2" style="text-align: center;"><label for="{{item._id}}system.checkmod"><b>{{localize "SW25.Check"}}{{localize "SW25.Modifier"}}</b></label><br>
              <input id="{{item._id}}system.checkmod" style="max-width: calc(50% - 7px);" type="text" name="system.checkmod" value="{{system.checkmod}}" data-dtype="Number"/></span>          </div>
          <div class="flexcol grid grid-8col nogapmargin">
            <div class="grid-span-2 flex-group-center">
              <span style="text-align: center;"><label for="{{item._id}}system.customdice"><b>{{localize "SW25.Item.Customdice"}}</b></label><br>
                <input id="{{item._id}}system.customdice" type="checkbox" name="system.customdice" data-dtype="Boolean" {{#if system.customdice}} checked {{/if}}/></span>
            </div>
            <div class="grid-span-4" style="display: {{#if system.customdice}}block{{else}}none{{/if}};">
              <label for="{{item._id}}customformula" class="resource-label">{{localize "SW25.Item.Formula"}}</label>
              <input id="{{item._id}}customformula" type="text" name="system.customformula" value="{{system.customformula}}" data-dtype="String"/>
            </div>
            <div class="grid-span-2">
            </div>
          </div>
        </div>
        <div style="display: {{#if system.usepower}}block{{else}}none{{/if}};">
          {{> "systems/sw25/templates/item/parts/item-usepower.hbs"}}
        </div>
      </div>
    </div>

    {{!-- Effects Tab --}}
    <div class="tab effects" data-group="primary" data-tab="effects">
      {{> "systems/sw25/templates/item/parts/item-effects.hbs"}}
    </div>

  </section>
</form>
